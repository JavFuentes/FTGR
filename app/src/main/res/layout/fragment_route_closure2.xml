<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".app.ui.fragment.RouteClosure2Fragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:titleTextColor="@android:color/white"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_route_start_time_label"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="HORA INICIO RUTA"
                    android:textColor="@color/gray"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="35dp" />

                <TextView
                    android:id="@+id/tv_route_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="10:00"
                    android:textSize="@dimen/margin_medium"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="35dp" />
                "
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_route_closing_time_label"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="HORA CIERRE RUTA"
                    android:textColor="@color/gray"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="35dp" />

                <TextView
                    android:id="@+id/tv_route_closing_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="21:00"
                    android:textSize="@dimen/margin_medium"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="35dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_route_time_label"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="TIEMPO EN RUTA"
                    android:textColor="@color/gray"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="35dp" />

                <TextView
                    android:id="@+id/tv_route_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="11 horas"
                    android:textSize="@dimen/margin_medium"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="35dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_initial_mileage_label"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="KILOMETRAJE INICIAL"
                    android:textColor="@color/gray"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="35dp" />

                <TextView
                    android:id="@+id/tv_initial_mileage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="15.200 Kms"
                    android:textSize="@dimen/margin_medium"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="35dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_final_mileage_label"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="KILOMETRAJE FINAL"
                    android:textColor="@color/gray"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="35dp" />

                <EditText
                    android:id="@+id/et_final_mileage"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="@dimen/margin_large"
                    android:ems="10"
                    android:hint="Ingresar kilómetros"
                    android:inputType="numberDecimal"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="64dp" />

                <TextView
                    android:id="@+id/tv_unit_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Km"
                    tools:layout_editor_absoluteX="248dp"
                    tools:layout_editor_absoluteY="76dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_discharged_liters_label"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="CUENTA LITROS"
                    android:textColor="@color/gray"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="35dp" />

                <EditText
                    android:id="@+id/et_discharged_liters"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:ems="10"
                    android:hint="Ingresar cuenta litros"
                    android:inputType="numberDecimal"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="64dp" />

                <TextView
                    android:id="@+id/tv_unit_2_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Litros"
                    tools:layout_editor_absoluteX="248dp"
                    tools:layout_editor_absoluteY="76dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_total_route_label"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="TOTAL RECORRIDO"
                    android:textColor="@color/gray"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="35dp" />

                <TextView
                    android:id="@+id/tv_total_route"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="250 Km"
                    android:textSize="@dimen/margin_medium"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="35dp" />
            </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_medium"
                android:background="@color/extra_light_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_guides_label"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="NÚMERO DE GUÍAS"
                    android:textColor="@color/gray"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="35dp" />

                <TextView
                    android:id="@+id/tv_guides"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="1"
                    android:textSize="@dimen/margin_medium"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="35dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_invoices_label"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="NÚMERO DE FACTURAS"
                    android:textColor="@color/gray"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="35dp" />

                <TextView
                    android:id="@+id/tv_invoices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="2"
                    android:textSize="@dimen/margin_medium"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="35dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_receipts_label"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="NÚMERO DE BOLETAS"
                    android:textColor="@color/gray"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="35dp" />

                <TextView
                    android:id="@+id/tv_receipts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="0"
                    android:textSize="@dimen/margin_medium"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="35dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_returned_orders_label"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="PEDIDOS DEVUELTOS"
                    android:textColor="@color/gray"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="35dp" />

                <TextView
                    android:id="@+id/tv_returned_orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="2"
                    android:textSize="@dimen/margin_medium"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="35dp" />
            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_medium"
                android:background="@color/extra_light_gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/blue1"
                android:orientation="horizontal"
                android:padding="@dimen/margin_small">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_extra_large"
                    android:text="NÚMERO PEDIDOS"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_extra_large"
                    android:text="CONDICIÓN \n  DE PAGO"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_extra_large"
                    android:text=" MEDIO\nDE PAGO"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_extra_large"
                    android:text="LITROS"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_extra_large"
                    android:text="TOTAL"
                    android:textColor="@color/white" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="@dimen/margin_medium" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@color/blue1"
                android:orientation="horizontal"
                android:padding="@dimen/margin_small">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_extra_large"
                    android:text="TOTAL:"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_extra_large"
                    android:text=""
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_extra_large"
                    android:text=""
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_total_liters"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_extra_large"
                    android:text="0.0"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_total_amount"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_extra_large"
                    android:text="$0.0"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/blue1"
                android:paddingVertical="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_medium"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_extra_large"
                    android:text="DOCUMENTO"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_extra_large"
                    android:text="TOTAL"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_extra_large"
                    android:text="EFECTIVO" />

                <TextView
                    android:id="@+id/tv_cash"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_extra_large"
                    android:text="$0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_extra_large"
                    android:text="CHEQUE" />

                <TextView
                    android:id="@+id/tv_check"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_extra_large"
                    android:text="$0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_extra_large"
                    android:text="T. BANCARIA" />

                <TextView
                    android:id="@+id/tv_bank_transfer"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_extra_large"
                    android:text="$0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_extra_large"
                    android:text="CRÉDITO" />

                <TextView
                    android:id="@+id/tv_credit"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_extra_large"
                    android:text="$0"/>
            </LinearLayout>

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginHorizontal="@dimen/margin_large"
                android:layout_marginBottom="@dimen/margin_small"
                android:background="@color/extra_light_gray"
                app:layout_constraintBottom_toTopOf="@+id/btn_close_route" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_close_route"
                style="?attr/materialButtonStyle"
                android:layout_width="@dimen/button_medium"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_large"
                android:layout_marginBottom="@dimen/margin_large"
                android:backgroundTint="@color/enabled_button"
                android:layout_gravity="end"
                android:text="Cerrar Ruta"
                android:textAllCaps="true"
                android:textColor="@color/white"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
