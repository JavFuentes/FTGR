<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".app.ui.fragment.SaleFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:titleTextColor="@android:color/white"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_client_name_label"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="CLIENTE"
                    android:textColor="@color/gray"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="240dp" />

                <TextView
                    android:id="@+id/tv_client_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="JOHN DOE"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="259dp" />
            </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_medium"
                android:background="@color/extra_light_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_client_code_label"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="CÓDIGO CLIENTE"
                    android:textColor="@color/gray"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="240dp" />

                <TextView
                    android:id="@+id/tv_client_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="00987654321"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="259dp" />
            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_medium"
                android:background="@color/extra_light_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_order_number_label"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="N° PEDIDO"
                    android:textColor="@color/gray"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="240dp" />

                <TextView
                    android:id="@+id/tv_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="00123456789"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="259dp" />
            </LinearLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_medium"
                android:background="@color/extra_light_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_client_rut_label"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="RUT"
                    android:textColor="@color/gray"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="240dp" />

                <TextView
                    android:id="@+id/tv_client_rut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="18.569.525-5"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="259dp" />
            </LinearLayout>

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_medium"
                android:background="@color/extra_light_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_discharged_liters_label"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_large"
                        android:layout_marginTop="@dimen/margin_large"
                        android:text="LITROS"
                        android:textColor="@color/gray"
                        tools:layout_editor_absoluteX="38dp"
                        tools:layout_editor_absoluteY="35dp" />

                    <TextView
                        android:id="@+id/tv_liters"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_large"
                        android:text="100 L"
                        tools:layout_editor_absoluteX="38dp"
                        tools:layout_editor_absoluteY="178dp" />

                </LinearLayout>

                <View
                    android:id="@+id/view5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:background="@color/extra_light_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_unit_value_label"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_large"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:text="PRECIO"
                        android:textColor="@color/gray"
                        tools:layout_editor_absoluteX="38dp"
                        tools:layout_editor_absoluteY="159dp" />

                    <TextView
                        android:id="@+id/tv_unit_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:text="$ 850"
                        tools:layout_editor_absoluteX="38dp"
                        tools:layout_editor_absoluteY="178dp" />
                </LinearLayout>

                <View
                    android:id="@+id/view6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:background="@color/extra_light_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_total_value_label"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_large"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:text="TOTAL"
                        android:textColor="@color/gray"
                        tools:layout_editor_absoluteX="38dp"
                        tools:layout_editor_absoluteY="240dp" />

                    <TextView
                        android:id="@+id/tv_total_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:text="$85.000"
                        tools:layout_editor_absoluteX="38dp"
                        tools:layout_editor_absoluteY="259dp" />
                </LinearLayout>

                <View
                    android:id="@+id/view7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:background="@color/extra_light_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_payment_condition_label"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_large"
                        android:layout_marginTop="@dimen/margin_large"
                        android:text="CONDICIÓN DE PAGO"
                        android:textColor="@color/gray"
                        tools:layout_editor_absoluteX="38dp"
                        tools:layout_editor_absoluteY="35dp" />

                    <TextView
                        android:id="@+id/tv_payment_condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_large"
                        android:text="CONTADO"
                        tools:layout_editor_absoluteX="38dp"
                        tools:layout_editor_absoluteY="178dp" />

                </LinearLayout>

                <View
                    android:id="@+id/view8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:background="@color/extra_light_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_payment_method_label"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_large"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:text="MÉTODO DE PAGO"
                        android:textColor="@color/gray"
                        tools:layout_editor_absoluteX="38dp"
                        tools:layout_editor_absoluteY="159dp" />

                    <TextView
                        android:id="@+id/tv_payment_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:text="TARJETA BANCARIA"
                        tools:layout_editor_absoluteX="38dp"
                        tools:layout_editor_absoluteY="178dp" />
                </LinearLayout>

                <View
                    android:id="@+id/view9"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:background="@color/extra_light_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_document_type_label"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_large"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:text="TIPO DE DOCUMENTO"
                        android:textColor="@color/gray"
                        tools:layout_editor_absoluteX="38dp"
                        tools:layout_editor_absoluteY="240dp" />

                    <TextView
                        android:id="@+id/tv_document_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:text="GUÍA DE DESPACHO"
                        tools:layout_editor_absoluteX="38dp"
                        tools:layout_editor_absoluteY="259dp" />
                </LinearLayout>

                <View
                    android:id="@+id/view10"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:background="@color/extra_light_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_client_signature_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:text="FIRMA CLIENTE"
                            android:textColor="@color/gray"
                            tools:layout_editor_absoluteX="38dp"
                            tools:layout_editor_absoluteY="240dp" />

                        <cl.abastible.ftgr.app.ui.customviews.DrawingView
                            android:id="@+id/drawingView1"
                            android:layout_width="300dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/margin_large"
                            android:background="@drawable/border_black" />

                    </LinearLayout>

                    <View
                        android:id="@+id/view0"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="@dimen/margin_large"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:background="@color/extra_light_gray"
                        app:layout_constraintBottom_toTopOf="@+id/btn_continue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_clean1"
                        style="?attr/materialButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_marginEnd="@dimen/margin_extra_large"
                        android:layout_marginBottom="@dimen/margin_large"
                        android:backgroundTint="@color/clean_button"
                        android:text="Limpiar"
                        android:textAllCaps="true"
                        android:textColor="@color/blue1"
                        app:cornerRadius="10dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_continue"
                        style="?attr/materialButtonStyle"
                        android:layout_width="@dimen/button_medium"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_large"
                        android:layout_marginBottom="@dimen/margin_large"
                        android:backgroundTint="@color/enabled_button"
                        android:text="Continuar"
                        android:layout_gravity="end"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        app:cornerRadius="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
