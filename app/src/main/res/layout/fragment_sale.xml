<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".app.ui.fragment.SaleFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:titleTextColor="@android:color/white"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_discharged_liters_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginStart="@dimen/margin_large"
                android:text="LITROS DESCARGADOS"
                tools:layout_editor_absoluteX="38dp"
                tools:layout_editor_absoluteY="35dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_discharged_liters"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="64dp" />

                <TextView
                    android:id="@+id/tv_unit_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Litros"
                    tools:layout_editor_absoluteX="248dp"
                    tools:layout_editor_absoluteY="76dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_unit_value_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="VALOR UNITARIO"
                tools:layout_editor_absoluteX="38dp"
                tools:layout_editor_absoluteY="159dp" />

            <TextView
                android:id="@+id/tv_unit_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="850"
                tools:layout_editor_absoluteX="38dp"
                tools:layout_editor_absoluteY="178dp" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_medium"
                android:background="@color/extra_light_gray" />

            <TextView
                android:id="@+id/tv_total_value_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="VALOR TOTAL"
                tools:layout_editor_absoluteX="38dp"
                tools:layout_editor_absoluteY="240dp" />

            <TextView
                android:id="@+id/tv_total_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="$0"
                tools:layout_editor_absoluteX="38dp"
                tools:layout_editor_absoluteY="259dp" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_medium"
                android:background="@color/extra_light_gray" />

            <TextView
                android:id="@+id/tv_payment_condition_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="CONDICIÓN DE PAGO"
                tools:layout_editor_absoluteX="38dp"
                tools:layout_editor_absoluteY="326dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_payment_condition1"
                android:layout_width="140dp"
                android:layout_height="48dp"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_small"
                android:text="30 Días"
                android:textColor="@color/dark_gray"
                android:backgroundTint="@color/extra_light_gray" />

            <Button
                android:id="@+id/btn_payment_condition2"
                android:layout_width="140dp"
                android:layout_height="48dp"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_small"
                android:text="Contado"
                android:textColor="@color/dark_gray"
                android:backgroundTint="@color/extra_light_gray" />

            <Button
                android:id="@+id/btn_payment_condition3"
                android:layout_width="140dp"
                android:layout_height="48dp"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginEnd="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_small"
                android:text="45 Días"
                android:textColor="@color/dark_gray"
                android:backgroundTint="@color/extra_light_gray" />
        </LinearLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@color/extra_light_gray" />

            <TextView
                android:id="@+id/tv_payment_method_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="MEDIO DE PAGO"
                tools:layout_editor_absoluteX="38dp"
                tools:layout_editor_absoluteY="326dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center" >

                <Button
                    android:id="@+id/btn_payment_method1"
                    android:layout_width="140dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="Débito"
                    android:textColor="@color/dark_gray"
                    android:backgroundTint="@color/extra_light_gray" />
                <Button
                    android:id="@+id/btn_payment_method2"
                    android:layout_width="140dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="Efectivo"
                    android:textColor="@color/dark_gray"
                    android:backgroundTint="@color/extra_light_gray" />

                <Button
                    android:id="@+id/btn_payment_method3"
                    android:layout_width="140dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginEnd="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="Crédito"
                    android:textColor="@color/dark_gray"
                    android:backgroundTint="@color/extra_light_gray" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:id="@+id/view4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/margin_large"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:background="@color/extra_light_gray"
                    app:layout_constraintBottom_toTopOf="@+id/btn_payment" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_payment"
                    style="?attr/materialButtonStyle"
                    android:layout_width="@dimen/button_medium"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_large"
                    android:layout_marginBottom="@dimen/margin_large"
                    android:backgroundTint="@color/enabled_button"
                    android:text="Pago"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    app:cornerRadius="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
